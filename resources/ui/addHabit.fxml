<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.AddHabitController"
      alignment="CENTER"
      spacing="15.0"
      prefWidth="300"
      prefHeight="200">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Label text="Add a New Habit" alignment="CENTER">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <TextField
            fx:id="habitNameField"
            promptText="Enter habit name"/>

    <Button
            text="Save Habit"
            onAction="#handleSaveHabit"
            style="-fx-background-color: linear-gradient(to bottom right, #6a11cb, #2575fc); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 8 16 8 16;">
        <font>
            <Font size="14.0"/>
        </font>
        <effect>
            <Blend/>
        </effect>
    </Button>

</VBox>
