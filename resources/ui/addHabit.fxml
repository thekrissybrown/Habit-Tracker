<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="200" prefWidth="300" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="ui.AddHabitController">

    <Label alignment="CENTER" text="Add a New Habit">
      <font>
         <Font name="System Bold" size="24.0" />
      </font></Label>
    <TextField fx:id="habitNameField" promptText="Enter habit name" />
    <Button graphicTextGap="3.0" onAction="#handleSaveHabit" styleClass="-fx-background-color: linear-gradient(to bottom right, #6a11cb, #2575fc);-fx-text-fill: white;-fx-font-weight: bold;-fx-background-radius: 10;-fx-padding: 8 16 8 16;" text="Save Habit">
      <font>
         <Font size="14.0" />
      </font>
      <effect>
         <Blend />
      </effect></Button>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>

</VBox>
